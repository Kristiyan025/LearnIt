@model LearnIt.Controllers.CourseController.FormModel

@{
    ViewData["Title"] = "Edit Course";
    string empty = "";
}

@section EditCourseCss{
    <link href="@Url.Content("~/css/form.css")" rel="stylesheet" type="text/css" />
}

<div class="log-form first-section">
    <div class="log-form-wrapper">
        <form asp-controller="Course" asp-action="UpdateCourse" method="post">
            <h4 class="form-title">
                Edit Course
            </h4>
            <hr />
            <input asp-for="CourseId" value="@ViewBag.Course.Id" style="display: none;" />
            <div asp-validation-summary="All" class="text-danger all-mistakes"></div>
            <div class="form-group">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-input" placeholder="MVC EF C#"
                       value="@ViewBag.Course.Name" />
                <span asp-validation-for="Name" class="text-danger mistake"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="CourseImageLink"></label>
                <input asp-for="CourseImageLink" class="form-input" placeholder="https://softuni.bg"
                       value="@(ViewBag.Course.CourseImageLink is null ? empty : ViewBag.Course.CourseImageLink)" />
                <span asp-validation-for="CourseImageLink" class="text-danger mistake"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="About"></label>
                <textarea asp-for="About" class="form-input txt-area scrollable" rows="6" cols="80" placeholder="Enter a brief description of the course..."
                          data-text="@(ViewBag.Course.About is null ? empty : ViewBag.Course.About)"></textarea>
                <span asp-validation-for="About" class="text-danger mistake"></span>
            </div>

            <button type="submit" class="btn btn-primary">
                Update Course
            </button>
        </form>
    </div>
</div>

<script>
    var txt = document.querySelector('.txt-area');
    txt.defaultValue = txt.getAttribute('data-text');
</script>
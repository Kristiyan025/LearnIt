@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section RegisterCss{
    <link href="@Url.Content("~/css/form.css")" rel="stylesheet" type="text/css" />
}

<div class="log-form first-section">
    <div class="log-form-wrapper">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>
                Create a new account
            </h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger all-mistakes"></div>
            <div class="form-group">
                <label class="form-label" asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-input" />
                <span asp-validation-for="Input.UserName" class="text-danger mistake"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-input" />
                <span asp-validation-for="Input.FullName" class="text-danger mistake"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-input" />
                <span asp-validation-for="Input.Email" class="text-danger mistake"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-input" />
                <span asp-validation-for="Input.Password" class="text-danger mistake"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-input" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger mistake"></span>
            </div>
            <button type="submit" class="btn btn-primary">
                Register
            </button>
            <p class="go-to-register">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                    You have already an account? Sign In
                </a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

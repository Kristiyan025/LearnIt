    ViewData["Title"] = "Privacy Policy";
}

@section AboutUsCss{
    <link href="@Url.Content("~/css/about-us.css")" rel="stylesheet" type="text/css" />
}

<section class="intro-about-us first-section">
    <h1 class="about-us-title">
        About Us
    </h1>
    <section class="wrapper">
        <div class="img-wrapper">
            <img src="~/images/index/united-business-team.jpg" alt="United Business Team" />
